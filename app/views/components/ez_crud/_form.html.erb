<% require "ez_crud/html" %>

<% if model.errors.any? %>
  <ul class="errors">
  <% model.errors.full_messages.each do |message| %>
    <li class="error"><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with(model: model, local: true, class: "form") do |form| %>

  <%=EzCrud::Html.inputs(form, model, local_assigns.fetch(:input_params, {}))%>

  <div class="actions">
    <%= form.submit class: "button #{model.id ? "edit" : "create"}" %>
  </div>

<% end %>
