<div class="index-page <%=model_class%>">

  <%= render 'components/ez_crud/title', title: model_class.name.pluralize.titleize do %>
    <div class="ez-crud-menu">
      <% if creatable? %>
        <%= link_to I18n.t("ez_crud.create"), send("new_#{model_class.name.underscore}_path") %>
      <% end %>
    </div>
  <% end %>

  <%= render 'components/ez_crud/notice', notice: notice %>

  <%= render 'components/ez_crud/query_form', model_class: model_class, search: search %>

  <%= render 'components/ez_crud/index_table', model_class: model_class, models: models, search: search %>

</div>
